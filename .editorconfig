# EditorConfig helps developers define and maintain consistent
# coding styles between diffferent editors and IDEs
# editorconfig.org

root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.py]
indent_size = 4

[*.{toml,yaml,yml}]
indent_style = space
indet_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
